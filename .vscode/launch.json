    "version": "0.2.0",
    "configurations": [

    {
            "name": "(lldb) Launch with file input",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/submission",
            "args": ["${workspaceFolder}/input.txt", "${workspaceFolder}/output.txt"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Launch with test mode",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/submission",
            "args": ["${workspaceFolder}/test_input.txt", "${workspaceFolder}/test_output.txt", "test"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }

    ]
}